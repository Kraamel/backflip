<div class="main onboard onboard-intro">
  <form class="pure-form pure-form-stacked" action="{{onboard.tagsAction}}" method="post">
    <input type="hidden" name="_id" value="{{record._id}}" />
    <div class="pure-g">
      <div class="pure-u-1-3">
      <div class="grid-box picture-box">
        <div id="uploadcare" class="image-preview-single picture">
          <img src="" alt="">
          <input id="uploadcare" type="hidden" role="uploadcare-uploader" name="picture[url]" data-crop="300x300 upscale" data-image-shrink="1280x1280" data-images-only="true"  value="{{uploadCarePictureUrl}}"/>
        </div>
      </div>
      </div>
      <div class="pure-u-2-3">
        <div class="grid-box">
          <label for="email">
            <a title={{__ "About Security"}} class="fa fa-lock" aria-hidden="true" href="{{url "security" null}}"></a>
            {{__ "Email"}}
          </label>
          <input class="pure-input-1" id="email" name="email" type="email" value="{{user.loginEmail}}" disabled="">
        </div>
        <div class="grid-box">
          <label for="name">{{__ "Name"}}</label>
          <input class="pure-input-1" id="name" name="name" type="text" value="{{record.name}}">
        </div>
      </div>
    </div>
    <div class="pure-g">
      <div class="pure-u-1">
        <div class="grid-box">
          <label for="intro">{{__ "What do you do at %s?" organisation.name}}</label>
          <input class="pure-input-1 desc-input" id="intro" name="intro" type="text" value="{{record.intro}}">
        </div>
        <div class="grid-box">
          <label for="wings-checkbox">{{__ "Which are your Wings?"}}</label>
          <div id="wings-checkbox" class="slick">
            {{#wings}}
            <div>
              <label for="{{_id}}" class="wings-label">
                <img src="{{picture.url}}" class="wings-img">
                <input id="{{_id}}" type="checkbox" name="wings" value="{{_id}}">
                {{tag}}
              </label>
            </div>
            {{/wings}}
          </div>
        </div>
      </div>
    </div>
    <div class="pure-g">
      <div class="pure-u-1-3">
        <div class="grid-box button-box">
          <a class="pure-button scale back-button" href="{{onboard.welcomeAction}}">{{{__ "Back"}}}</a>
        </div>
      </div>
      <div class="pure-u-2-3">
        <div class="grid-box button-box">
          <button type="submit" class="pure-button scale">{{{__ "Next"}}}</button>
        </div>
      </div>
    </div>
  </form>
</div>
