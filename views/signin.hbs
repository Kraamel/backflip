<div class="main">
  {{#if organisation}}
  <div class="pure-g">
    <div class="pure-u-1">
      <div class="grid-box">
        <h2>{{{__ 'Welcome in the Wingzy of'}}}</h2>
        <h1>
          {{{organisation.name}}}
        </h1>
        <h3>{{{__ 'Wingzy is an intuitive app to find the coworkers you need within %s according to what they love and know' organisation.name}}}</h3>
      </div>
    </div>
  </div>
  {{else}}
  <div class="pure-g">
    <div class="pure-u-1">
      <div class="grid-box">
        <h1>{{__ "Welcome to Wingzy"}}</h1>
        <h2>{{{__ 'Wingzy is an intuitive app to find the coworkers you need according to what they love and know'}}}</h2>
      </div>
    </div>
  </div>
  {{/if}}
  <div class="pure-g">
    <div class="pure-u-1 pure-u-signin">
      {{> signin_form}}
    </div>
  </div>
  <div class="pure-g">
    <a class="pure-u-1-2 align-center" title="{{__ "Terms of Service"}}" href="{{url "terms" null}}">{{__ "Terms of Service"}}</a>
    <a class="pure-u-1-2 align-center" title="{{__ "Privacy Policy"}}" href="{{url "privacy" null}}">{{__ "Privacy Policy"}}</a>
  </div>
  <div class="pure-g">
    <div class="pure-u-1">
      <div class="grid-box">
        <img src="/images/wings.jpg" class="pure-img">
      </div>
    </div>
  </div>
</div>
