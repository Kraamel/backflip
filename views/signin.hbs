<div class="main">
  {{#if organisation}}
  <div class="pure-g">
    <div class="pure-u-1">
      <h1>{{__ "Welcome to %s!" organisation.name}}</h1>
      <h2>{{{__ 'Wingzy is the obvious app to find each other by revealing our skills and passions'}}}</h2>
    </div>
  </div>
  {{else}}
  <div class="pure-g">
    <div class="pure-u-1">
      <h1>{{__ "Welcome to Wingzy"}}</h1>
      <h2>{{{__ 'Wingzy is the obvious app to find the coworkers you need by revealing skills and passions'}}}</h2>
    </div>
  </div>
  {{/if}}
  <div class="bottom-buttons">
    <div class="pure-g">
      <div class="pure-u-1 pure-u-signin">
        {{> signin_form}}
      </div>
    </div>
    <div class="pure-g">
      <a class="pure-u-1-2" title="{{__ "Terms of Service"}}" href="{{url "terms" null}}">{{__ "Terms of Service"}}</a>
      <a class="pure-u-1-2" title="{{__ "Privacy Policy"}}" href="{{url "privacy" null}}">{{__ "Privacy Policy"}}</a>
    </div>
  </div>
</div>
