<div class="main">
  {{> form_errors}}
  <div class="pure-g">
    <div class="pure-u-1 pure-u-md-1-4 left-panel">
      <div class="grid-box">
        <div class="picture">
          <img src="{{pictureUrl record.picture record.type}}" alt="">
        </div>
        <h1>{{{record.name}}}</h1>
        {{#if record.intro}}
        <p id="intro">{{{record.intro}}}</p>
        {{/if}}
      </div>
      {{#if record.links}}
      <div class="grid-box cloud-list">
        {{#record.links}}
        {{> link}}
        {{/record.links}}
      </div>
      {{/if}}
      <div class="grid-box action-buttons">
        {{#if canEdit}}
        <a id="edit-button" href="{{editUrl record._id organisation.tag}}" class="pure-button scale">{{{__ "Edit profile"}}}</a>
        {{/if}}
        {{#if canDelete}}
        <a id="delete-button" href="{{deleteUrl record._id organisation.tag}}" class="pure-button scale back-button">{{{__ "Delete profile"}}}</a>
        {{/if}}
      </div>
    </div>
    <div class="pure-u-1 pure-u-md-3-4">
      {{#if record.hashtags}}
        <div class="grid-box">
          <ul class="cloud" id="hashtag-cloud">
            {{#record.hashtags}}
            {{> hashtag}}
            {{/record.hashtags}}
          </ul>
        </div>
      {{/if}}
      {{#if record.description}}
      <div class="grid-box">
        <p class="cloud" id="description">{{{record.description}}}</p>
      </div>
      {{/if}}
    </div>
  </div>
</div>
