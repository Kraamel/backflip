<div class="main">
  {{> form_errors}}
  <div class="pure-g">
    <div class="pure-u-1 pure-u-md-2-3">
      <div class="grid-box">
        <div class="picture">
          <img src="{{pictureUrl record.picture record.type}}" alt="">
        </div>
        <div class="name">
          <h1>{{{record.name}}}</h1>
        </div>
      </div>
      {{#if record.intro}}
      <div class="grid-box">
        <h2>{{__ "What I do at %s" organisation.name}}</h2>
        <p class="cloud" id="intro">{{{record.intro}}}</p>
      </div>
      {{/if}}
    </div>
    {{#if record.links}}
    <div class="pure-u-1 pure-u-md-1-3">
      <div class="grid-box">
        {{#if canEdit}}
        <a id="edit-button" href="{{editUrl record._id organisation.tag}}" class="pure-button scale">{{{__ "Edit profile"}}}</a>
        {{/if}}
        {{#if canDelete}}
        <a id="delete-button" href="{{deleteUrl record._id organisation.tag}}" class="pure-button scale back-button">{{{__ "Delete profile"}}}</a>
        {{/if}}
        <h2>{{__ "Contact me"}}</h2>
        <div class="cloud cloud-list">
          {{#record.links}}
          {{> link}}
          {{/record.links}}
        </div>
        <p class="cloud-howto">{{__ "By order of preference."}}</p>
      </div>
    </div>
    {{/if}}
  </div>
  {{#if record.hashtags}}
  <div class="pure-g">
    <div class="pure-u-1">
      <div class="grid-box">
        <h2>{{__ "My Hashtags"}}</h2>
        <ul class="cloud" id="hashtag-cloud">
          {{#record.hashtags}}
          {{> hashtag}}
          {{/record.hashtags}}
        </ul>
        <p class="cloud-howto">{{__ "By order of importance."}}</p>
      </div>
    </div>
  </div>
  {{/if}}
  {{#if record.description}}
  <div class="pure-g">
    <div class="pure-u-1">
      <div class="grid-box">
        <h2>{{__ "About me"}}</h2>
        <p class="cloud" id="description">{{{record.description}}}</p>
      </div>
    </div>
  </div>
  {{/if}}
</div>
