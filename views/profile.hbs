<div class="main">
  {{> form_errors}}
  <div class="pure-g">
    <div class="pure-u-md-1-3 pure-u-1">
      <div class="grid-box picture-box">
        <div class="picture">
          <img src="{{pictureUrl record.picture record.type}}" alt="">
        </div>
      </div>
    </div>
    <div class="pure-u-md-2-3 pure-u-1">
      <div class="grid-box">
        <h1 id="name">{{{record.name}}}</h1>
      </div>
    </div>
  </div>
  <div class="pure-g">
    <div class="pure-u-1">
      <div class="grid-box">
        <p class="cloud" id="intro">{{{record.intro}}}</p>
      </div>
    </div>
  </div>
  <div class="pure-g">
    <div class="pure-u-1">
      <div class="grid-box">
        <ul class="cloud" id="hashtag-cloud">
          {{#record.hashtags}}
          {{> hashtag}}
          {{/record.hashtags}}
        </ul>
      </div>
    </div>
  </div>
  <div class="pure-g">
    <div class="pure-u-1">
      <div class="grid-box">
        <ul class="cloud" id="link-cloud">
          {{#record.links}}
          {{> link}}
          {{/record.links}}
        </ul>
      </div>
    </div>
  </div>
</div>
