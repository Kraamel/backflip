<div class="main">
  <div class="pure-g">
    <div class="pure-u-1 pure-u-md-1-2  pure-u-xl-1-4 left-panel {{#if canEdit}}editable{{/if}}">
      <div class="grid-box">
        <div class="picture">
          <img src="{{pictureUrl record.picture record.type}}" alt="">
        </div>
        <h1>{{{record.name}}}</h1>
        {{#if record.intro}}
        <p id="intro">{{{record.intro}}}</p>
        {{/if}}
      </div>
      {{#if record.links}}
      <div class="grid-box cloud-list links">
        {{#record.links}}
        {{> link}}
        {{/record.links}}
      </div>
      {{/if}}
      <div class="grid-box action-buttons">
        {{#if canEdit}}
        <a id="edit-button" href="{{editUrl record._id organisation.tag}}" class="pure-button scale">{{{__ "Edit Profile"}}}</a>
        {{/if}}
        {{#if canDelete}}
        <a id="delete-button" href="{{deleteUrl record._id organisation.tag}}" class="pure-button scale back-button">{{{__ "Delete profile"}}}</a>
        {{/if}}
      </div>
    </div>
    <div class="pure-u-1 pure-u-md-1-2 pure-u-xl-3-4 right-panel">
      <div class="grid-box">
        <ul>
          {{#record.allHashtags}}
          {{> hashtag}}
          {{/record.allHashtags}}
          {{#if canEdit}}
            <a id="hashtags-button" href="{{editUrl record._id organisation.tag 'hashtags'}}" class="pure-button scale cloud-element hashtag"><span>{{__ "Add Wings"}}</span></a>
          {{/if}}
        </ul>
      </div>
      <div class="grid-box">
        {{#if editAboutUrl}}
          <a id="about-button" href="{{editAboutUrl}}" class="pure-button scale"><span>{{__ "Edit"}}</span></a>
        {{/if}}
        <h2>{{__ 'About me'}}</h2>
        <p id="description">{{{record.description}}}</p>
      </div>
    </div>
  </div>
</div>
