<form action="{{formAction}}" method="post" class="signup-form pure-form">
  <p>{{{__ "An invitation to join the private beta."}}}</p>
  <input class="pure-input-1" type="email" name="email" value="{{email}}" placeholder="{{__ "Your work email"}}">
  <input class="pure-input-1" type="url" name="url">
  {{#errors}}<p class="errors"><i class="fa fa-hand-paper-o" aria-hidden="true"></i> {{msg}}</p>{{/errors}}
  <button type="submit" class="pure-button">{{__ "Get Started"}}</button>
  <p class="homepage-or">{{__ "or"}}</p>
  <a class="google-login pure-button" href="{{loginUrl}}">{{__ "Get Started with Google"}}</a>
</form>
