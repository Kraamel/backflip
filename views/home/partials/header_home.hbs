<header>
{{#if search}}
<div class="pure-g search-on">
  <a class="pure-u-logo pure-u-md-1-6" href="{{homeUrl organisation}}">
    <div>
      <img src="/wingzy_full.png">
    </div>
  </a>
  <div class="pure-u-search pure-u-1 pure-u-md-2-3">
    <div id="search">
      <i class="fa fa-search" aria-hidden="true"></i>
      <a id="clear-search" class="fa fa-times" aria-hidden="true"></a>
    </div>
  </div>
  <div class="pure-u-menu pure-u-md-1-6">
    {{> menu_home}}
  </div>
</div>
{{else}}
<div class="pure-g">
  <a class="pure-u-logo pure-u-1-3 pure-u-md-1-6" href="{{homeUrl organisation}}">
    <div class="logo">
      <img src="/wingzy_full.png">
    </div>
  </a>
  <div class="pure-u-menu pure-u-2-3 pure-u-md-5-6">
    {{> menu_home}}
  </div>
</div>
{{/if}}
</header>
