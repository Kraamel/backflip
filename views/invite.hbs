<div class="main">
  <form action="{{formAction}}" method="post" class="pure-form">
    <div class="pure-g">
      <div class="pure-u-1">
        <div class="grid-box">
          <h1>{{__ "Thanks, you are awesome !"}}</h1>
        </div>
      </div>
    </div>
    <div class="pure-g">
      <div class="pure-u-1">
        <div class="grid-box">
          {{> form_successes}}
          {{> form_errors}}
          <label for="email">{{__ "Invite a coworker to join your Wingzy !"}}</label>
          <input id="email" name="emails[0]" type="text" class="pure-input-1" placeholder="simone@{{organisation.domain}}, michel@{{organisation.domain}}" value="{{emails.[0]}}">
          <label for="email">{{__ "(Optional) Personalise your email."}}</label>
          <textarea name="customMessage" class="pure-input-1" rows="8" value="{{emailsCustomMessage}}" minlength="10">{{textPlaceholder}}</textarea>
        </div>
      </div>
    </div>
    <div class="bottom-buttons">
      <div class="pure-g">
        <div class="pure-u-1-2 pure-u-md-2-3">
          <div class="grid-box">
            <button type="submit" class="pure-button scale">{{{__ "Send"}}}</button>
          </div>
        </div>
        <div class="pure-u-1-2 pure-u-md-1-3">
          <div class="grid-box">
            <a class="pure-button scale back-button" href="{{skipUrl}}">{{{__ "Skip"}}}</a>
          </div>
        </div>
      </div>
    </div>
  </form>
  <div class="illustration butterfly">
  </div>
</div>
