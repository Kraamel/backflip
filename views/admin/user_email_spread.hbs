<div class="main">
  <form class="pure-form pure-form-stacked" action="{{spreadAction}}" method="post">
    <div class="pure-g">
      <div class="pure-u-1">
        <div class="grid-box">
          <h1>{{__ "Spread your Wingzy"}}</h1>
          {{> form_errors}}
          <textarea class="pure-input-1 desc-input" id="text" name="text" rows="12">{{{text}}}</textarea>
          <p>{{__ "This email will be sent to %s people" recipients.length}}</p>
          <p>
            {{#recipients}}{{this}} {{/recipients}}
          </p>
        </div>
      </div>
    </div>
    <div class="bottom-buttons">
      <div class="pure-g">
        <div class="pure-u-1-2 pure-u-md-1-3">
          <div class="grid-box">
            <a class="pure-button scale back-button" href="{{backUrl}}">{{{__ "Back"}}}</a>
          </div>
        </div>
        <div class="pure-u-1-2 pure-u-md-2-3">
          <div class="grid-box">
            <button type="submit" class="pure-button scale">{{{__ "Send %s emails" recipients.length}}}</button>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
