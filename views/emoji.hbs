<div class="main">
  <div class="pure-g">
  </div>
  <form class="pure-form pure-form-stacked" action="{{coverAction}}" method="post">
    <input type="hidden" name="_id" value="{{record._id}}" />
    <div class="pure-g">
      <div class="pure-u-1">
        <div class="grid-box">
          <h2>{{__ 'Select an Emoji for %s' record.tag}}</h2>
          <input class="pure-input-1" type="text" id="emoji" name="emoji" value="{{record.picture.emoji}}"/>
          {{> form_errors}}
        </div>
      </div>
    </div>
    <div class="bottom-buttons">
      <div class="pure-g">
        <div class="pure-u-1-2 pure-u-md-1-3">
          <div class="grid-box">
            <a class="pure-button scale back-button" href="{{backUrl}}">{{{__ "Back"}}}</a>
          </div>
        </div>
        <div class="pure-u-1-2 pure-u-md-2-3">
          <div class="grid-box">
            <button type="submit" class="pure-button scale">{{{__ "Change Emoji"}}}</button>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
