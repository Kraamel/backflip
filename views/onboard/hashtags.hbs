<div class="main">
  <form class="pure-form pure-form-stacked" action="{{onboard.hashtagsAction}}" method="post">
    <input type="hidden" name="_id" value="{{record._id}}" />
    <div class="pure-g">
      <div class="pure-u-1">
        <div class="grid-box">
          {{> form_errors}}
          <label for="wings">{{__ "What are you good at? What do you love? Where do you belong?"}}</label>
        </div>
        <div id="search" class="search-input-box grid-box pure-form">
          <input id="wings" name="hashtags" type="text" placeholder="{{__ 'Type Wings here'}}" value="{{hashtagsAsString}}">
        </div>
      </div>
    </div>
    <div class="pure-g">
      <div class="pure-u-1">
        <div class="grid-box">
          <h3>{{__ "Suggestions"}} <a class="reload scale fa fa-refresh" aria-hidden="true"></a></h3>
          <div id="wings-suggestions"></div>
        </div>
      </div>
    </div>
    <div class="bottom-buttons">
      <div class="pure-g">
        <div class="pure-u-1-2 pure-u-md-1-3">
          <div class="grid-box">
            <a class="pure-button scale back-button" href="{{onboard.introAction}}">{{{__ "Back"}}}</a>
          </div>
        </div>
        <div class="pure-u-1-2 pure-u-md-2-3">
          <div class="grid-box">
            <button type="submit" class="pure-button scale">{{{__ "Save"}}}</button>
          </div>
        </div>
      </div>
    </div>
  </form>
  <div class="illustration birds">
  </div>
</div>
<div id="modal-layer">
</div>
<script type="text/template" id="hashtags-template">
  {{{{raw}}}}
    <div href="" class="cloud-element hashtag" data-tag="{{tag}}" data-name="{{name}}" data-picture-path="{{picture.path}}" data-picture-emoji="{{picture.emoji}}">
      {{{pictureHtml}}}
      <span>{{name}}</span>
    </div>
  {{{{/raw}}}}
</script>
<script>
  var algoliaPublicKey = {{{json algoliaPublicKey}}};
  var isProduction = {{{json isProduction}}};
  var hashtagsForBank = {{{json record.hashtags}}}
  var newHashtagSentence = '{{__ "Create new hashtag"}}';
</script>
{{>jquery}}
<script src="//cdn.jsdelivr.net/algoliasearch/3/algoliasearch.min.js"></script>
<script src="//cdn.jsdelivr.net/hogan.js/3.0.2/hogan.min.common.js"></script>
<script src="/javascripts/jquery-ui.min.js"></script>
<script src="/javascripts/selectize.min.js"></script>
<script src="/javascripts/wings.js"></script>
