<div class="main">
    <form class="pure-form pure-form-stacked" action="{{onboard.featuredWingsAction}}" method="post">
        <input type="hidden" name="_id" value="{{record._id}}" />
        <div class="pure-g">
            <div class="pure-u-1">
              <div class="grid-box">
                {{> form_errors}}
                <label for="wings">{{{__ "Just to make sure..."}}}</label>
              </div>
            </div>
        </div>

    {{#featuredWingsByFamily}}
        <div class="pure-g">
            <div class="pure-u-1">
            <div class="grid-box wings-checkboxes-label">
                <label for="wings-checkboxes">{{title}}</label>
            </div>
            </div>
        </div>
        
        <div id="wings-checkboxes" class="pure-g">
        {{#records}}
            <div class="pure-u-1-2 pure-u-md-1-3">
            <div class="grid-box">
                <label for="{{tag}}" class="wings-label cloud-element hashtag">
                  <div class="wings-label-name emoji-wings">{{{icon this}}}<span>{{name}}</span></div>
                  <input id="{{tag}}" type="checkbox" name="wings" value="{{tag}}" {{#checked}}checked{{/checked}}>
                </label>
            </div>
            </div>
        {{/records}}
        </div>
    {{/featuredWingsByFamily}}

    <div class="bottom-buttons">
      <div class="pure-g">
        <div class="pure-u-1-2 pure-u-md-1-3">
          <div class="grid-box">
            <a class="pure-button scale back-button" href="{{onboard.hashtagsAction}}">{{{__ "Back"}}}</a>
          </div>
        </div>
        <div class="pure-u-1-2 pure-u-md-2-3">
          <div class="grid-box">
            <button type="submit" class="pure-button scale">{{{__ "Save"}}}</button>
          </div>
        </div>
      </div>
    </div>
  </form>
  <div class="illustration cat">
  </div>
</div>
{{> jquery}}
{{> uploadcare_script}}

<script src="/javascripts/jquery.textcomplete.min.js"></script>
<script src="https://cdn.jsdelivr.net/algoliasearch/3/algoliasearch.min.js"></script>
<script>var algoliaPublicKey = {{{json algoliaPublicKey}}};</script>
<script src="/javascripts/edit.js"></script>
<script>
  $('#wings-checkboxes label').click(function () {
    if($(this).children('input').is(':checked')) $(this).addClass('checked');
    if(!$(this).children('input').is(':checked')) $(this).removeClass('checked');
  });
  $('#wings-checkboxes input:checked').parent().addClass('checked');
  
  $( document ).ready(function() {
    var elt = document.getElementsByClassName('uploadcare--widget__button uploadcare--widget__button_type_open')[0];
    elt.innerHTML = '<i class="fa fa-camera" aria-hidden="true"></i> {{{__ "Click here"}}}';
  });
  

</script>
