<div class="main">
  <div class="pure-g">
    <div class="pure-u-1">
      <div class="grid-box">
        <h2>{{{__ 'Welcome in the Wingzy of'}}}</h2>
        <h1>
          {{{organisation.name}}}
        </h1>
      </div>
    </div>
  </div>
  <div class="pure-g">
    <div class="pure-u-1">
      <div class="video-box">
        <iframe width="100%" height="100%" src="https://www.youtube.com/embed/kOCg8575_E0?rel=0&showinfo=0&autoplay=1&mute=1" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
      </div>
    </div>
  </div>
  <div class="pure-g">
    <div class="pure-u-1">
      <div class="grid-box">
        <h3>{{{__ 'Wingzy is the app to share what we are good at and love doing within %s' organisation.name}}}</h3>
      </div>
    </div>
  </div>
  <div class="bottom-buttons">
    <div class="pure-g">
      <div class="pure-u-1">
        <div class="grid-box">
          <form action="{{onboard.welcomeAction}}" method="post">
            <button type="submit" class="pure-u-1 pure-button scale">{{{__ "Spread your wings"}}}</button>
          </form>
        </div>
      </div>
    </div>
    <div class="pure-g">
      <a class="pure-u-1-2" target="_blank" title="{{__ "Terms of Service"}}" href="{{url "terms" null}}">{{__ "Terms of Service"}}</a>
      <a class="pure-u-1-2" target="_blank" title="{{__ "Protecting your Data"}}" href="{{url "protectingYourData" organisation.tag}}">{{__ "Protecting your Data"}}</a>
    </div>
  </div>
</div>
