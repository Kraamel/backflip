<div class="main">
  <form class="pure-form pure-form-stacked" action="{{aboutAction}}" method="post">
    <input type="hidden" name="_id" value="{{record._id}}" />
    <div class="pure-g">
      <div class="pure-u-1">
        <div class="grid-box">
          <h2>{{__ "Tell us about you"}}</h2>
          {{> form_errors}}
          <textarea class="pure-input-1 desc-input" id="about" name="about" placeholder="{{{__ 'Who am I ...'}}}" rows="6">{{{record.description}}}</textarea>
        </div>
      </div>
    </div>
    <div class="bottom-buttons">
      <div class="pure-g">
        <div class="pure-u-1-2 pure-u-md-1-3">
          <div class="grid-box">
            <a class="pure-button scale back-button" href="{{backUrl}}">{{{__ "Back"}}}</a>
          </div>
        </div>
        <div class="pure-u-1-2 pure-u-md-2-3">
          <div class="grid-box">
            <button type="submit" class="pure-button scale">{{{__ "Save"}}}</button>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
{{> jquery}}
<script src="/javascripts/jquery.textcomplete.min.js"></script>
<script src="https://cdn.jsdelivr.net/algoliasearch/3/algoliasearch.min.js"></script>
<script>var algoliaPublicKey = {{{json algoliaPublicKey}}};</script>
<script src="/javascripts/edit.js"></script>
