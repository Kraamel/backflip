          {
            element: document.querySelector('#search'),
            intro: "This is the search. But there are more details to be added. Especially one specific argument.",
            position: 'bottom-middle-aligned'
          },
          {
            element: document.querySelector('#left-panel'),
            intro: "Lorem ipsum indolor suit amen. Palatinum plopendum martigul. Mouhaha pargola hectorigulae mouts.",
            position: 'right'
          }
        ],
        hidePrev: true,
        hideNext: true,
        showStepNumbers: false
      });
      intro.start();
  }
</script>
