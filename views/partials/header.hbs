<header style="background-color:{{organisation.colors.primary}}">
{{#if search}}
<div class="pure-g search-on">
  <a title="{{__ 'Go back home'}}" class="pure-u-logo pure-u-md-1-6" href="{{homeUrl organisation}}">
    <div>
      {{#if organisation.logo.url}}
        <img class="organisation-logo" src="{{organisation.logo.url}}" alt="{{organisation.name}}">
      {{else}}
        <img src="/wingzy_full.png" alt="{{organisation.name}}">
      {{/if}}
    </div>
  </a>
  <div class="pure-u-search pure-u-1 pure-u-md-2-3">
    <div id="search">
      <i class="fa fa-search" aria-hidden="true"></i>
      <a id="clear-search" class="fa fa-times" aria-hidden="true"></a>
    </div>
  </div>
  <div class="pure-u-menu pure-u-md-1-6">
    {{> menu}}
  </div>
</div>
{{else}}
<div class="pure-g">
  <a title="{{__ 'Go back home'}}" class="pure-u-logo pure-u-1-2 pure-u-md-1-6" href="{{homeUrl organisation}}">
    <div class="logo">
      <img src="/wingzy_full.png">
    </div>
  </a>
  <div class="pure-u-search pure-u-md-2-3">
  </div>
  <div class="pure-u-menu pure-u-1-2 pure-u-md-1-6">
    {{> menu}}
  </div>
</div>
{{/if}}
</header>
