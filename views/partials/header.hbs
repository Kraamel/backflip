<header>
{{#if search}}
<div class="pure-g search-on">
  <a title="{{__ 'Go back home'}}" class="pure-u-logo pure-u-xl-1-4" href="{{homeUrl organisation}}">
    <div>
        <img src="/wingzy.png" alt="Wingzy">
    </div>
  </a>
  <div class="pure-u-search pure-u-1 pure-u-xl-1-2">
    <div id="search" class="search-input-box pure-form">
      {{#if searchInput}}<input type="text" placeholder="{{__ 'Search'}}">{{/if}}
      <i id="search-input-icon" class="fa fa-search scale" aria-hidden="true"></i>
    </div>
  </div>
  <div class="pure-u-menu pure-u-xl-1-4">
    {{> menu}}
  </div>
</div>
{{else}}
<div class="pure-g">
  <a title="{{__ 'Go back home'}}" class="pure-u-logo pure-u-1-3" href="{{homeUrl organisation}}">
    <div>
        <img src="/wingzy.png" alt="Wingzy">
    </div>
  </a>
  <div class="pure-u-menu pure-u-2-3">
    {{> menu}}
  </div>
</div>
{{/if}}
</header>
