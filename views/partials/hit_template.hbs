<script type="text/html" id="hit-template">
  {{{{raw}}}}
  {{#hits}}
  <div class="item {{type}}">
    <div class="pure-g">
      <div class="expander" onclick="toggleItem(this)" class="pure-u-1-5">
        <div class="thumb">
             <img src="{{image_path}}">
        </div>
      </div>
      <div class="pure-u-4-5 central">
        <h2 class="expander" onclick="toggleItem(this)">{{{_highlightResult.name.value}}}</h2>
        <p class="description snippet">{{{_snippetResult.description.value}}}</p>
        <p class="description full">{{{_highlightResult.description.value}}}</p>
        <div class="links pure-menu pure-menu-horizontal">
          <ul class="pure-menu-list">
            <li class="pure-menu-item expander"><a onclick="toggleItem(this)" class="pure-menu-link"><i class="fa fa-chevron-down" aria-hidden="true"></i></a></li>
            {{#links}}
            <li class="pure-menu-item"><a href="https://{{link}}" class="pure-menu-link"><i class="fa fa-{{type}}" aria-hidden="true"></i><span class="link-text"> {{display}}</span></a></li>
            {{/links}}
            <li class="pure-menu-item collapser"><a onclick="toggleItem(this)" class="pure-menu-link"><i class="fa fa-chevron-up" aria-hidden="true"></i></a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  {{/hits}}
  {{{{/raw}}}}
</script>
