<script type="text/html" id="hit-template">
  {{{{raw}}}}
  <div class="item {{type}}">
    <div class="pure-g">
      <div class="pure-u-1-5">
        <div class="thumb">
             <img onload="resizeImg(this)" src="{{picture.url}}">
        </div>
        <p class="tag">
          <a class="searcher" onclick="setSearch('{{tag}}')">{{{_highlightResult.tag.value}}}</a>
          {{#canEdit}}
          <a href="/compose/{{objectID}}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
          {{/canEdit}}
          {{#canDelete}}
          <a href="/admin/records/delete/{{objectID}}"><i class="fa fa-times" aria-hidden="true"></i></a>
          {{/canDelete}}
        </p>
      </div>
      <div class="pure-u-4-5 central">
        <h2 class="searcher" onclick="toggleItem(this)">{{{_highlightResult.name.value}}}</h2>
        <p class="description snippet">{{{_snippetResult.description.value}}}</p>
        <p class="description full">{{{_highlightResult.description.value}}}</p>
        <div class="links pure-menu pure-menu-horizontal">
          <ul class="pure-menu-list">
            <li class="pure-menu-item expander"><a onclick="toggleItem(this)" class="pure-menu-link"><i class="fa fa-chevron-down" aria-hidden="true"></i></a></li>
            {{#links}}
            <li class="pure-menu-item {{class}}"><a href="{{url}}" class="pure-menu-link"><i class="fa fa-{{icon}}" aria-hidden="true"></i><span class="link-text"> {{display}}</span></a></li>
            {{/links}}
            <li class="pure-menu-item collapser"><a onclick="toggleItem(this)" class="pure-menu-link"><i class="fa fa-chevron-up" aria-hidden="true"></i></a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  {{{{/raw}}}}
</script>
