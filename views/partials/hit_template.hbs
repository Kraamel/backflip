<script type="text/html" id="hit-template">
  {{{{raw}}}}
  <div class="record pure-g">
    <div class="pure-u-1-3">
      <a href="{{url}}" class="picture">
        <img src="{{picture.url}}">
      </a>
    </div>
    <div class="pure-u-2-3">
      <a href="{{url}}" class="name">
        <h2>{{{_highlightResult.name.value}}}</h2>
      </a>
      <p>{{{_snippetResult.intro.value}}}</p>
    </div>
    {{#hashtags.length}}
    <div class="pure-u-1 pure-u-hashtags">
      <a onclick="goRight(this)" class="fa fa-chevron-right scroll-right" aria-hidden="true"></a>
      <a onclick="goLeft(this)" class="fa fa-chevron-left scroll-left" aria-hidden="true"></a>
      <div class=" hashtags-box">
        <div class="hashtags">
          {{#hashtags}}
          <a onclick="setSearch('{{tag}}')" class="cloud-element hashtag {{class}}">
            <img src="{{picture.url}}">
            {{name}}
          </a>
          {{/hashtags}}
        </div>
      </div>
    </div>
    {{/hashtags.length}}
    {{#links.length}}
    <div class="pure-u-1 contacts">
      {{#links}}
      <a href="{{url}}" class="{{class}} fa fa-{{icon}}" title="{{display}}" aria-hidden="true" target="_blank"></a>
      {{/links}}
    </div>
    {{/links.length}}
  </div>
  {{{{/raw}}}}
</script>
