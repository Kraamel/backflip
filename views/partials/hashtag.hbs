{{#if editable}}
<li class="cloud-element hashtag{{#if added}} added{{/if}}">
  <img src="{{pictureUrl picture type}}">
  <a class="js-remove">x</a>
  <input type="hidden" name="hashtags" value="{{_id}}" />
  {{name}}
</li>
{{else}}
<a href="/{{tag}}" class="cloud-element hashtag{{#if added}} added{{/if}}">
  <img src="{{pictureUrl picture type}}">
  {{name}}
</a>
{{/if}}
