<div class="main">
  <div class="pure-g">
    <div class="pure-u-1-6">
      <h1 class="reward"><i class="fa {{error status "icon"}}" aria-hidden="true"></i></h1>
    </div>
    <div class="pure-u-5-6 pure-u-md-3-6">
      <h2 class="name">{{error status "name"}}</h2>
      <p>{{error status "description"}}</p>
      <a href="https://youtu.be/{{error status "youtubeId"}}" class="quote">
        <i class="fa fa-quote-left" aria-hidden="true"></i> {{error status "quote"}} <i class="fa fa-quote-right" aria-hidden="true"></i>
        <span><i class="fa fa-video-camera" aria-hidden="true"></i> {{error status "reference"}}</span>
      </a>
    </div>
    <div class="pure-u-1 pure-u-md-2-6">
      <h1 class="reward error-code">{{status}}</h1>
    </div>
  </div>
  <div class="pure-g">
    <div class="pure-u-1 youtube-player">
      <iframe src="https://www.youtube.com/embed/{{error status "youtubeId"}}&autoplay=1" frameborder="0" allowfullscreen></iframe>
    </div>
  </div>
  <div class="pure-g">
    <div class="pure-u-1-1">
      <h2>{{error.message}}</h2>
      <pre>{{error.stack}}</pre>
    </div>
  </div>
</div>
