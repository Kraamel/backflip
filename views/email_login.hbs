<div class="main edit">
  <form action="{{formAction}}" method="post" class="pure-form">
    <div class="pure-g">
      <div class="pure-u-1">
        <h1 class="tagline">Login</h1>
        <ul class="errors">
          {{#errors}}
          <li><i class="fa fa-hand-paper-o" aria-hidden="true"></i> {{msg}}</li>
          {{/errors}}
        </ul>
      </div>
    </div>
    <div class="pure-g">
      <div class="pure-u-1">
        <fieldset class="pure-group">
          <input name="email" type="email" class="pure-input-1 email-input" placeholder="{{__ "Your work email"}}" value="{{email}}">
        </fieldset>
      </div>
    </div>
    <div class="pure-g">
      <div class="pure-u-1">
        <p class="validate">
          <input type=submit class="pure-button button-success save-input" value="Login"></input>
        </p>
      </div>
    </div>
  </form>
</div>
